{
  "manifest_version": 3,
  "name": "Vanity Automator",
  "description": "Automate preview and publish of vanity URLs for Radancy employees",
  "version": "2",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "img/icon.png"
  },
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "js": ["js/content.js"],
      "type": "module",
      "matches": [
          "https://tbadmin.radancy.net/redirects/vanitysearchurls*",
          "https://tbadmin.radancy.eu/redirects/vanitysearchurls*"
      ]
    }
  ],
  "permissions": ["scripting", "tabs"],
  "host_permissions": [
    "https://tbadmin.radancy.net/redirects/vanitysearchurls*",
    "https://tbadmin.radancy.eu/redirects/vanitysearchurls*"
  ],
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["js/popup.js", "js/types.js", "js/imports.js"]
  }]
}